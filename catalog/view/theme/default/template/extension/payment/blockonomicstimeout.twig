{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-7 col-sm-offset-1' %}
    {% else %}
    {% set class = 'col-sm-8 col-sm-offset-2' %}
    {% endif %}

    <div id="content" class="{{ class }}">
      {{ content_top }}

      <h3 class="red">Payment expired</h3>
      <p>The maximum time of 10 minutes during payment was reached. The order has been put on hold.</p>
      <p>Please contact us to re-process your order, or re-oder your purchase.</p>

      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
